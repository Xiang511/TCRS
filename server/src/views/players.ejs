<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/player.css">
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="shortcut icon" href="/img/battle.png" type="image/x-icon">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

  <!-- jQUERY -->
  <script src="/js/jquery_3.7.1_jquery.min.js"></script>
  <!-- jQUERY -->

  <link href="/js/DataTables/css/jquery.dataTables.min.css" rel="stylesheet">

  <script src="/js/DataTables/js/jquery.dataTables.min.js"></script>

  <!-- fixed col -->
  <link rel="stylesheet" href=https://cdn.datatables.net/fixedcolumns/4.3.0/css/fixedColumns.dataTables.min.css">
  <script src="https://cdn.datatables.net/fixedcolumns/4.3.0/js/dataTables.fixedColumns.min.js"></script>
  <!-- fixed col -->

  <!-- DataTables Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.tailwindcss.min.js"></script>
</head>

<body>
  <section class="nav-bg">
    <a href="https://SiteStates.com" title="站長工具" style="display: none;">
      <img src="https://SiteStates.com/show/image/33556.jpg" border="0" />
    </a>
    <input type="checkbox" id="menu-switch">
    <header class="main-header">
      <div class="logo">
        <a href="/">
          TCRS
        </a>
      </div>
      <label for="menu-switch" class="hb icon">
        <i class='bx bx-menu open'></i>
        <i class='bx bx-x close'></i>
      </label>
      <nav class="main-nav">
        <a class="click" href="/"><i class='bx bx-home-alt-2'></i> 首頁</a>
        <a class="click" href="/players"><i class='bx bx-trophy mr-1'></i>生涯紀錄</a>
        <a class="click" href="/players/leaderboard"><i class='bx bx-bar-chart-alt-2 mr-1'></i>天梯紀錄</a>
        <a class="click" href="/players/badges"><i class='bx bx-badge-check mr-1'></i>徽章紀錄</a>
      </nav>
    </header>
  </section>
  <div class="container">
    <h1><%= title %> <img class="leaderboardTitleIcon" src="/img/battle.png" alt=""></h1>

    <div class="info-section">
      <!-- 季度選擇器 -->
      <div class="season-selector">
        <label for="seasonSelect">選擇季度：</label>
        <select id="seasonSelect">
          <% availableSeasons.forEach(function(season) { %>
          <option value="<%= season %>" <%= currentSeason === season ? 'selected' : '' %>>
            <%= season %>
          </option>
          <% }); %>
        </select>
      </div>

      <div>
        <p class="info-text">
          <% if (players.length > 0) { %>
          更新時間: <%= players[0].time %> | 資料筆數: <%= players.length %>
          <% } else { %>
          目前沒有資料
          <% } %>
        </p>
      </div>
    </div>

    <div class="compare-section">
      <input id="searchitem1" type="text" placeholder="使用'+'來增加關鍵字 Ex: xiake+DANY">
      <button class="btn" onclick="multiSearch()">比較</button>
    </div>


    <!-- 載入覆蓋層 -->
    <div id="loadingOverlay" class="loading-overlay">
      <div class="loading-spinner">
        <div class="spinner"></div>
        <p class="loading-text">載入中...</p>
      </div>
    </div>

    <!-- 骨架屏 -->
    <div id="skeletonScreen" class="skeleton-screen">
      <div class="skeleton-table">
        <div class="skeleton-header">
          <div class="skeleton-cell" style="width: 15%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
          <div class="skeleton-cell" style="width: 8%;"></div>
        </div>
        <div class="skeleton-body">
          <div class="skeleton-row" style="animation-delay: 0s;">
            <div class="skeleton-cell" style="width: 15%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
          </div>
          <div class="skeleton-row" style="animation-delay: 0.1s;">
            <div class="skeleton-cell" style="width: 15%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
          </div>
          <div class="skeleton-row" style="animation-delay: 0.2s;">
            <div class="skeleton-cell" style="width: 15%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
          </div>
          <div class="skeleton-row" style="animation-delay: 0.3s;">
            <div class="skeleton-cell" style="width: 15%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
          </div>
          <div class="skeleton-row" style="animation-delay: 0.4s;">
            <div class="skeleton-cell" style="width: 15%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
            <div class="skeleton-cell" style="width: 8%;"></div>
          </div>
        </div>
      </div>
    </div>


    <!-- 顯示玩家列表 -->
    <table id="myTable" class="display">
      <thead>
        <tr>
          <th>名稱</th>
          <th>經驗</th>
          <th>勝場</th>
          <th>戰鬥次數</th>
          <th>三冠次數</th>
          <th>聯賽次數</th>
          <th>總捐贈數</th>
          <th>星光點數</th>
          <th>經驗點數</th>
          <th>遊玩時間</th>
        </tr>
      </thead>
      <tbody>
        <% players.forEach(function(player) { %>
        <tr>
          <td><a href="/players/<%= player.tag.substring(1) %>"><%= player.name %></a> </td>
          <td><%= player.expLevel %></td>
          <td><%= player.wins %></td>
          <td><%= player.battleCount %></td>
          <td><%= player.threeCrownWins %></td>
          <td><%= player.tournamentBattleCount %></td>
          <td><%= player.totalDonations %></td>
          <td><%= player.starPoints %></td>
          <td><%= player.totalExpPoints %></td>
          <td><%= player.badges.YearsPlayed.progress || 0 %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <script src="https://SiteStates.com/show/js_text/49bcb5c0fd457f7a07d5fba4e343a5bf" type="text/javascript"></script>
    <a href="/joinus" class="joinus">沒看到你的資料? 加入我們</a>
  </div>
  <footer class="footer">
    <p>&copy; <%= new Date().getFullYear() %> TCRS - Taiwan ClashRoyale Ranking System</p>
    <p>Made with ❤️ for Xiang</p>
    <span><i class='bx bx-show'></i><%=  Pageviews.map(c=>c.count) %>次瀏覽</span>
  </footer>

  <script src="/js/datatable.js"></script>
  <script>
    // 季度選擇器切換
    $('#seasonSelect').on('change', function() {
      const selectedSeason = $(this).val();
      if (selectedSeason) {
        window.location.href = `/players?time=${encodeURIComponent(selectedSeason)}`;
      } else {
        window.location.href = '/players';
      }
    });
  </script>
</body>

</html>