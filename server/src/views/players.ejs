<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/player.css">

  <!-- jQUERY -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <!-- jQUERY -->

  <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">

  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- DataTables Tailwind CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.tailwindcss.min.css">
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.tailwindcss.min.js"></script>


  <!-- fixed col -->
  <link rel="stylesheet" href=https://cdn.datatables.net/fixedcolumns/4.3.0/css/fixedColumns.dataTables.min.css">
  <script src="https://cdn.datatables.net/fixedcolumns/4.3.0/js/dataTables.fixedColumns.min.js"></script>
  <!-- fixed col -->

  <!-- 表格拖拉 -->
  <link rel="stylesheet" href="https://cdn.datatables.net/colreorder/1.7.0/css/colReorder.dataTables.min.css">
  <script src="https://cdn.datatables.net/colreorder/1.7.0/js/dataTables.colReorder.min.js"></script>
  <!-- 表格拖拉 -->

  <script>
    $(document).ready(function() {
      let table = new DataTable('#myTable', {
        order: [[1, 'desc']], 
        info: false,
        processing: true,
        colReorder: true,
        colReorder: {
          fixedColumnsLeft: 1
        },
        fixedColumns: {
          start: 1,
          end: 2
        },
        scrollCollapse: true,
        language: {
          processing: "處理中...",
          search: "搜尋:",
          lengthMenu: "顯示 _MENU_ 筆資料",
          paginate: {
            first: "第一頁",
            last: "最後一頁",
            next: "下一頁",
            previous: "上一頁"
          },
          emptyTable: "目前沒有資料",
          zeroRecords: "沒有符合的資料"
        }
      });

      // 季度選擇器切換
      $('#seasonSelect').on('change', function() {
        const selectedSeason = $(this).val();
        if (selectedSeason) {
          window.location.href = `/players?time=${encodeURIComponent(selectedSeason)}`;
        } else {
          window.location.href = '/players';
        }
      });
    });
  </script>

</head>

<body>
  <div class="container">
    <h1><%= title %></h1>
    
    <div class="info-section">
      <!-- 季度選擇器 -->
      <div class="season-selector">
        <label for="seasonSelect">選擇季度：</label>
        <select id="seasonSelect">
          <% availableSeasons.forEach(function(season) { %>
            <option value="<%= season %>" <%= currentSeason === season ? 'selected' : '' %>>
              <%= season %>
            </option>
          <% }); %>
        </select>
      </div>

      <div>
        <p class="info-text">
          <% if (players.length > 0) { %>
            更新時間: <%= players[0].time %> | 資料筆數: <%= players.length %>
          <% } else { %>
            目前沒有資料
          <% } %>
        </p>
      </div>
    </div>

    <!-- 顯示玩家列表 -->
    <table id="myTable" class="display">
      <thead>
        <tr>
          <th>名稱</th>
          <th>經驗</th>
          <th>勝場</th>
          <th>戰鬥次數</th>
          <th>三冠次數</th>
          <th>聯賽戰鬥次數</th>
          <th>總捐贈數</th>
          <th>星星點數</th>
          <th>總經驗點數</th>
        </tr>
      </thead>
      <tbody>
        <% players.forEach(function(player) { %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.expLevel %></td>
          <td><%= player.wins %></td>
          <td><%= player.battleCount %></td>
          <td><%= player.threeCrownWins %></td>
          <td><%= player.tournamentBattleCount %></td>
          <td><%= player.totalDonations %></td>
          <td><%= player.starPoints %></td>
          <td><%= player.totalExpPoints %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>